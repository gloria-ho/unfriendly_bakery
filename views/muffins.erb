<% @title = "Muffins" %>
<% @bg_img = "muffins" %>


<div class="container content-text product-col">
  <div class="row">
    <div class="col-sm-4">
      <p><a data-toggle="modal" data-target="#img_modal" data-info="<%= @almond.img %>"><img src="<%= @almond.img %>" alt="image of item <%= @almond.name %>" class="product-img"/></a></p>
      <p><span class="bold"><%= @almond.name %></span></p>
      <p><span class="lighter"><%= @almond.descr %></span></p>
      <p><%= @almond.price %></p>
    </div>
    <!-- /.col-4 -->
    <div class="col-sm-4 product-col">
      <p><a data-toggle="modal" data-target="#img_modal" data-info="<%= @pretzel.img %>"><img src="<%= @pretzel.img %>" alt="image of item <%= @pretzel.name %>" class="product-img"/></a></p>
      <p><span class="bold"><%= @pretzel.name %></span></p>
      <p><span class="lighter"><%= @pretzel.descr %></span></p>
      <p><%= @pretzel.price %></p>
    </div>
    <!-- /.col-4 -->
    <div class="col-sm-4 product-col">
      <p><a data-toggle="modal" data-target="#img_modal" data-info="<%= @red_velvet.img %>"><img src="<%= @red_velvet.img %>" alt="image of item <%= @red_velvet.name %>" class="product-img"/></a></p>
      <p><span class="bold"><%= @red_velvet.name %></span></p>
      <p><span class="lighter"><%= @red_velvet.descr %></span></p>
      <p><%= @red_velvet.price %></p>

    </div>
    <!-- /.col-4 -->
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->

<!-- image modal element-->
<div class="modal fade" id="img_modal" tabindex="-1" role="dialog" aria-labelledby="img_modalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <img src="" alt="" id="modal-img" class="modal-img">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>