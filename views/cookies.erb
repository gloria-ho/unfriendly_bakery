<% @title = "Cookies" %>
<% @bg_img = "cookies" %>

<div class="container content-text">
  <div class="row">
    <div class="col-sm-4 product-col">
      <p><a data-toggle="modal" data-target="#img_modal" data-info="<%= @sugar.img %>"><img src="<%= @sugar.img %>" alt="image of item <%= @sugar.name %>" class="product-img"/></a></p>
      <p><span class="bold"><%= @sugar.name %></span></p>
      <p><span class="lighter"><%= @sugar.descr %></span></p>
      <p><%= @sugar.price %></p>
    </div>
    <!-- /.col-4 -->
    <div class="col-sm-4 product-col">
      <p><a data-toggle="modal" data-target="#img_modal" data-info="<%= @chocolate.img %>"><img src="<%= @chocolate.img %>" alt="image of item <%= @chocolate.name %>" class="product-img"/></a></p>
      <p><span class="bold"><%= @chocolate.name %></span></p>
      <p><span class="lighter"><%= @chocolate.descr %></span></p>
      <p><%= @chocolate.price %></p>
    </div>
    <!-- /.col-4 -->
    <div class="col-sm-4 product-col">
      <p><a class="btn" data-toggle="modal" data-target="#img_modal" data-info="<%= @caramel.img %>"><img src="<%= @caramel.img %>" alt="image of item <%= @caramel.name %>" class="product-img"/></a></p>
      <p><span class="bold"><%= @caramel.name %></span></p>
      <p><span class="lighter"><%= @caramel.descr %></span></p>
      <p><%= @caramel.price %></p>
    </div>
    <!-- /.col-4 -->
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->

<!-- image modal element-->
<div class="modal fade" id="img_modal" tabindex="-1" role="dialog" aria-labelledby="img_modalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <img src="" alt="" id="modal-img" class="modal-img">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>