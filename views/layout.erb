<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <!-- styles -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous" />
  <link href="https://fonts.googleapis.com/css?family=Frijole|Advent+Pro" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/styles.css" />
</head>
<body>

  <div class="container-fluid">

    <div class="row">
      <div class="col-12">
        <header> 
          <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="/">Unfriendly Bakery</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav nav-items">
                <li class="nav-item active">
                  <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/about">About</a>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Shop
                  </a>
                  <div class="dropdown-menu catagories" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="/cookies">Cookies</a>
                    <a class="dropdown-item" href="/cakes">Cakes</a>
                    <a class="dropdown-item" href="/muffins">Muffins</a>
                  </div>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/visit">Visit Us</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/subscribe">Subscribe</a>
                </li>
              </ul>
            </div>
          </nav>
          <!-- /.nav -->
        </header>
      </div>
      <!-- /.col-12 -->
    </div>
    <!-- /.row -->
    
    <div class="row"> 
      <div class="col-12">
        <div class="bg-<%= @bg_img %>">
          
        </div>
        <%= yield %>
      </div>
      <!-- /.col-12 -->
    </div>
    <!-- /.row -->

  <div class="row">
    <div class="col-12">
      <footer class="footer">
          
        <div class="row footernav">
          <ul>
            <li><div><a href="/">Home</a></div></li>
            <li><div><a href="/about">About</a></div></li>
            <li><div><a href="/cookies">Cookies</a></div></li>
            <li><div><a href="/cakes">Cakes</a></div></li>
            <li><div><a href="/muffins">Muffins</a></div></li>
            <li><div><a href="/visit">Visit Us</a></div></li>
          </ul>
        </div>
        <!-- /.row.footernav -->

        <div class="row">

          <div class="col-4 copyright">
            &copy;2018 Unfriendly Bakery Inc.
          </div>
          <!-- /.col-6.copyright -->

          <div class="col-8"> 
            <form id="email-form" class="email-form" action="/signup" method="POST">
              <input type="email"  placeholder="Email Address" id="email-input" class="email-input" name="email" required>
              <button class="btn btn-secondary subscribe-button" id="subscribe-button" type="submit">Subscribe Me</button>
            </form>
            <!-- /#email-form.email-form -->
          </div>
          <!-- /.col-6 -->

      </footer>
      <!-- /.footer -->
    </div>
    <!-- /.col-12 -->
  </div>
  <!-- /.row -->
  </div>
  <!-- /.container -->

<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
<script src="index.js"></script>
</body>
</html>